@using TaskManagment.ViewModel;
@model ProjectAddEditViewModel
@{
    ViewData["Title"] = "AddEdit";
}

<h1>Add or Edit new Project</h1>
<form method="post">
    <div>
        
        <label> Project Name
            <input asp-for="Name" />
        </label>
     </div>
     <div>
        <label>
            Project Description
            <input asp-for="Description" />
        </label>
    <div/>
    <div>
        <label>
            Project Picture
            <input asp-for="Picture" />
        </label>
    <div/>
    <div>
        <label>
            TotalPercentage
            <input asp-for="TotalPercentage" />
        </label>
    </div>
      
        <div>
            @foreach (WorkerAddEditViewModel item in ViewBag.Workers)
            {
                <div>
                    <label>

                        <input type="checkbox" value="@item.Id" name="WorkerIds" />
                        @item.FirstName

                    </label>
                </div>


            }
        <input type="submit" value="Save"/> 
    </div>

</form>
